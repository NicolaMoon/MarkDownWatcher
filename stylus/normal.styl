*
  box-sizing: border-box
html, body, div
  margin: 0
  padding: 0
li
  list-style-type: none
a
  text-decoration: none
html
  font-family: 'Noto Serif SC', serif
  select
    display: inline-block
    position relative
    margin: 0 8px 10px 0
    width: 120px
    height: 32px
    color: rgba(0,0,0,0.65)
    font-size: 14px
    line-height: 1.5
    background-color: #fff
    option
      position: absolute
      z-index: 10
      top: 32px
  .header
    position: absolute
    top: 0
    left: 0
    z-index: 9
    width: 100%
    background: linear-gradient(to right, #151b26 15%, #5c3196 45%, #ff5263 100%)
    .title
      margin: 12px 16px
      font-size: 24px
      color: #eb6f5a
    .floatRight
      position: absolute
      top: 13.5px
      right: 8px
      .label
        margin-right: 8px
        color: #fff
  .wrapper
    padding-top: 59px
    display: flex
    flex-direction: row
    height: 100vh
    overflow hidden
    background-color: #f6f8f9
    .side
      order: 1
      flex: 1
      margin: 0
      padding: 1em
      padding-bottom: 0.5em
      overflow-y: scroll
      text-align: center
      background-color: #151b26
      .title
        padding-bottom: 12px
        color: #fff
        border-bottom: 1px solid #222b37
      .btn
        margin-bottom: 8px
        padding: 6px 0
        border-radius: 8px
        background: linear-gradient(to top right, #ff5263 0%, #ff7381 35%, #fcbd01 100%)
        color: #fff
        cursor pointer
      .editBtn
        background: linear-gradient(to right, #796eff 0%, #ff5263 100%)
      nav
        margin-bottom: 2rem
        letter-spacing: 1px
        .sideLink
          display: block
          padding: 0.5em
          border-top: 0
          color: #d5dce0
          &:hover
            cursor pointer
        .active
          color: #f17e7e
    .description
      order: 3
      flex: 2
      margin: 15px 15px 10px 7.5px
      background-color: #f6f8f9
      .info
        background-color: #fff
        box-shadow: 0 1px 3px 0 rgba(21,27,38,.15);
        .info-title
          padding: 12px 0 12px 24px
          border-bottom: 1px solid #e3e5ea
        .info-content
          padding 16px
          font-size 14px
          color #707070
    .content
      order: 2
      flex: 7
      margin: 15px 7.5px 10px 15px
      padding: 2em
      padding-bottom: 0.5em
      overflow: scroll
      background-color: #fff
      box-shadow: 0 1px 3px 0 rgba(21,27,38,.15);
      p
        text-indent: 20px
      pre
        margin: 0
      code
        display: block
        margin-bottom: 20px
        padding: 15px
        font-size: 13px
        word-wrap: normal
        word-break: break-word
        white-space: pre
        overflow: auto
        border-radius: 4px
        color: #abb2bf
        background: #282c34
      blockquote
        position relative
        margin: 0
        padding-left: 24px
        background-color: #f6f5f5
        p
          margin: 0
          padding: 12px 0
          text-indent: 0
        &:before
          content: ''
          position: absolute
          top: 0
          left: 0
          height: 100%
          width: 4px
          border-radius: 4px
          background-color: #f17e7e
      a
        color: #3194d0
        &:hover
          text-decoration: underline
      ul
        margin: 0
        padding: 0
      table
        width: 100%
        text-align: left
        border-radius: 4px 4px 0 0
        border-collapse: collapse
        border-spacing: 2px
        border-color: grey
        color: rgba(0,0,0,0.65)
        font-size: 14px
        line-height: 1.5
        thead
          th
            border-top-left-radius: 4px
            padding: 16px 16px
            color: rgba(0,0,0,0.85)
            font-weight: 500
            background: #fafafa
            border-bottom: 1px solid #e8e8e8
            transition: background .3s ease
        tr
          transition: all .3s,height 0s
        tbody
          td
            padding: 16px 16px
            border-bottom: 1px solid #e8e8e8
            transition: background .3s ease
      s
        color: #e16262
